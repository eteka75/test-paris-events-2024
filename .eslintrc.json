{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-console": "warn",
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.jsx", "*.tsx"],
      "linterOptions": {
        "reportUnusedDisableDirectives": true
      }
    }
  ]
}
